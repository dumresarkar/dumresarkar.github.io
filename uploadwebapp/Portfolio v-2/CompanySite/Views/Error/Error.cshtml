@{
    Layout = null;
}

<!DOCTYPE html>

<html lang="ja" dir="ltr">
<head>
    <meta http-equiv="x-ua-compatible" content="IE=edge">
    <meta charset="UTF-8">
    <meta name="viewport" content="width=960">
    <title>システムエラー</title>

    @*<link rel="icon" type="image/gif/png" href="/Content/img/icon-everest.png">*@

    <style type="text/css">
        #wrapper {
            margin-top: 40px;
        }

        #contents {
            width: 960px;
            text-align: left;
            margin: 0 auto 0 auto;
        }

        .contentsHeader {
            display: table;
            width: 100%;
            margin-bottom: 10px;
        }

        .pageTitle {
            font-size: 1.8rem;
            display: table-cell;
        }

        .pageBottom {
            margin: 0 0 10px;
            padding: 10px;
            border: 1px solid #ccc;
            background: #d8eef9;
        }

            .pageBottom p {
                margin-bottom: 10px;
            }

        .messageWrap {
            text-align: center;
        }

        .message {
            display: inline-block;
            margin: 50px auto;
            text-align: left;
        }

            .message p {
                font-size: 1.6rem;
                margin-bottom: 5px;
            }

                .message p:last-child {
                    margin-bottom: 0;
                }
    </style>

</head>
<body>

    <div id="wrapper">
        <div id="contents">
            
            <div class="pageBottom">
                <div class="messageWrap">
                    <div class="message">
                        @if (ViewData["msg"] == null)
                        {
                            <p><font color="red">システムエラーが発生しました。</font></p>
                            <p>管理者に問い合わせてください。</p>
                        }
                        else
                        {
                            <p><font color="red">@Html.Raw(ViewData["msg"].ToString())</font></p>
                        }
                    </div>
                    <div>
                        <a href="/">トップ画面へ</a>
                    </div>
                </div>
            </div>

            <!-- /contents -->
        </div>
        <!-- /wrapper -->
    </div>

</body>
</html>
